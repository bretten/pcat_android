<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--
        Navigation Drawer
    -->
    <style name="AppTheme.Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Divider -->
    <style name="AppTheme.Drawer.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <!-- Section item -->
    <style name="AppTheme.Drawer.Section">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <!-- Normal item -->
    <style name="AppTheme.Drawer.Normal">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--
        About DialogFragment
    -->
    <style name="AppTheme.About">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Title -->
    <style name="AppTheme.About.Title">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    <!-- Header -->
    <style name="AppTheme.About.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    <!-- Header2 -->
    <style name="AppTheme.About.Header2">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- Text -->
    <style name="AppTheme.About.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!-- Footer -->
    <style name="AppTheme.About.Footer">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!--
        Steps
    -->
    <style name="Step">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Step.Title">
        <item name="android:textSize">50sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Step.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="Step.Subtitle">
        <item name="android:textSize">35sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="Step.Header">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Step.Label">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Step.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:background">@drawable/edit_text_box</item>
    </style>
    <style name="Step.CalculatedValue">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Step.CalculatedValue.Important">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>
